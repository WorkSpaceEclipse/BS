<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout1_homefragment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/red" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="百思不得姐"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/relativeLayout2_homefragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/whitesmoke"
        android:layout_below="@+id/linearLayout1_homefragment"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_all_homefragment"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/tab_selector_tv_bg"
            android:gravity="center"
            android:text="全部"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/tab_selector_tv_color" />

        <TextView
            android:id="@+id/tv_pic_homefragment"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/tab_selector_tv_bg"
            android:gravity="center"
            android:text="图片"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/tab_selector_tv_color" />

        <TextView
            android:id="@+id/tv_txt_homefragment"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/tab_selector_tv_bg"
            android:gravity="center"
            android:text="文字"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/tab_selector_tv_color" />
        <!--  TextView
            android:id="@+id/tv_video_homefragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/tab_selector_tv_bg"
            android:gravity="center"
            android:text="视频"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/tab_selector_tv_color" />-->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout2_homefragment"
        android:background="@color/aliceblue" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_homefragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
             >
        </android.support.v4.view.ViewPager>

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:indeterminateDrawable="@drawable/app_loading_1_small" 
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>